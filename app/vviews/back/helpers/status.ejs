<% statusHelper = (linkPrefix,status,id) => { 
    let className = 'btn-success';
    let icon = 'fa-check';
    let link = linkPrefix + 'change-status/' + id + '/' + status;
    let linkU = linkPrefix + 'change-status/' + id + '/'
    if (status === 'inactive') {       
        className = 'btn-danger';
        icon = 'fa-minus';
    }       
    return `<a href="${link}"
        data-id="${id}"
        data-u="${linkU}"
        data-state = "${status}"
        data-active-class= "btn-success"
        data-active-icon= "fa-check"
        data-inactive-class= "btn-danger"
        data-inactive-icon= "fa-minus"
        data-current-class= "${className}"
        data-current-icon= "${icon}"    
        class="ajax-status my-btn-state rounded-circle btn btn-sm ${className}"><i class="fas ${icon}"></i></a>`
} %>

<% 
//hightlight text
 hightlight =  (text,key)=>{
    var index = (text.toLowerCase()).indexOf(key.toLowerCase());
  if (index >= 0) { 
   text = text.substring(0,index) + "<span class='highlight'>" + text.substring(index,index+key.length) + "</span>" + text.substring(index + key.length);
  }
  return text;
}
%> 

<% 
//No search data
noSearch = (item,key)=>{
    let html = `<div style="text-align:center;">No data was found with keyword "${key}" </div>`
    if(item.length == 0){
        html;
    }
    else{
        html = ''
    }
    return html;
}
%> 

